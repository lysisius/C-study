#include <stdio.h>
#define true 1
#define false 0

int getline(char s[], int lim)
{
    int c, i, j;

    j = 0;
    for (i=0; (c=getchar())!=EOF && c!='\n'; ++i) {
        if (i < lim-2) {
            s[j] = c;
            ++j;
        }
        if ('\n' == c) {
            s[j] = c;
            ++j; 
            ++i;
        }
        s[j] = '\0';
        return i;
    }

}

void reverse(char s[])
{
    int i, j;
    int size = sizeof(s) / sizeof(char);
    char *tmp = malloc(size);
    
    j=0;
    for (i=size-1; i>=0; i--) {
        tmp[j++] = s[i]; 
    }
    for (i=0; i<size; i++) {
        s[i] = tmp[i];
    }
}

int main()
{
    char input[100];

    getline(input, 100);

    reverse(input);

    for (i=0; i<100; i++) {
        printf("input[%d] is: %c\n", i, input[i]);
    }
}
